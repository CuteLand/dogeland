<?xml version="1.0" encoding="UTF-8" ?>
<!-- StorePage -->
<group title="补丁 ">
<action>
            <title>Ashmem</title>
            <desc>只在运行某些图形界面程序出现问题时，才使用此补丁</desc>
            <param name="archs">
                <option value="arm_64">arm64</option>
                <option value="arm">arm</option>
                <option value="x86">x86</option>
                <option value="x86_64">x86_64</option>
            </param>
            <set>$TOOLKIT/cli.sh shmem_patch</set>
</action>
</group>

<group>
<action>
            <title>XstartupAdd</title>
            <desc>只在启动图形界面只有X时，才使用此补丁</desc>
            <param name="archs">
                <option value="startxfce4">xfce</option>
                <option value="startlxde">lxde</option>
                <option value="PULSE_SERVER=tcp:0.0.0.0:4713">PulseAudio</option>
            </param>
            <set>$TOOLKIT/cli.sh xstartup_add</set>
</action>
</group>

<group>
<action>
            <title>DebianGroupAdd</title>
            <desc>只在登录终端提示缺少group组时，才使用此补丁</desc>
            <param name="bug" label="" title="GroupID" placeholder="" type="text" />
            <set>$TOOLKIT/cli.sh debiangroup_add</set>
</action>
</group>


<group>
<action>
            <title>fs-perm</title>
            <desc>全局更改Linux文件系统权限,用于解决一些bug</desc>
           <param name="perm" label="" title="" placeholder="0755" type="text" />
            <set>chmod -R $perm $rootfs/</set>
</action>
</group>

<group>
<action>
            <title>fix-sudo</title>
            <desc>修复sudo关键文件权限错误问题</desc>
            <set>$TOOLKIT/cli.sh fix_sudo</set>
</action>
</group>

<group>
<action>
            <title>PRoot-SECCOMP</title>
            <param name="type">
                <option value="enable_proot_seccomp">开!</option>
                <option value="">取消</option>
            </param>
            <set>$TOOLKIT/cli.sh $type</set>
</action>
</group>

<group title="插件 ">
<action>
            <title>安装插件</title>
            <param name="file" label="插件包" type="file"
                value="" editable="true" />
            <set>$TOOLKIT/app-addon/plugin_installer.sh</set>
        </action>
</group>

 <group>
   <page config="pages/hp4zq7bl.xml" title="GNU/Linux 扩展组件" />
 </group>

<group>
         <action>
            <title>QEMU-User-Emulator</title>
            <desc>开启PRoot/Chroot跨平台运行工具</desc>
            <set>am start --user 0 -a android.intent.action.VIEW -d https://github.com/dogelands/dogeland-assets</set>
        </action>
        </group>