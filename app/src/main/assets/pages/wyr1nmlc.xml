<?xml version="1.0" encoding="UTF-8" ?>
<!-- SettingsPage -->
  <page>
 <group title="基础">
     <action>
         <title>Rootfs路径</title>
             <param name="Input" label="" title="" placeholder="?" type="text" />
            <set>$TOOLKIT/cli.sh set_rootfsdir</set>
             </action>
        <action>
            <title>初始化命令行</title>
            <param name="Input" label="" title="" placeholder="?" type="text" />
            <set>$TOOLKIT/cli.sh set_initcmd</set>
        </action>
          <action>
            <title>快速启动设置</title>
             <param name="type">
                <option value="/bin/sh /dogeland/cli.sh sshd_start">启动sshd</option>
                <option value="/bin/sh /dogeland/cli.sh dropbear_start">启动dropbear</option>
                <option value="/bin/sh /dogeland/cli.sh vncserver_start">启动vncserver</option>
            </param>
            <set>
            rm -rf $CONFIG_DIR/cmd.conf
            echo "$type">$CONFIG_DIR/cmd.conf
            </set>
             </action>
          </group>
       <group title="进阶">
         <action bg-task="true">
            <title>开启后台锁定</title>
            <desc>保持应用前台运行和CPU唤醒,防止容器卡顿或被杀死</desc>
            <set>
            echo "保持后台运行中"
            sleep 9999
            </set>
        </action>
        <action>
            <title>备份Rootfs</title>
             <param name="dir" type="folder" value="/sdcard/Download" />
            <set>$TOOLKIT/cli.sh backup_rootfs</set>
        </action>
        <action>
            <title>检查运行环境</title>
            <set>sh $TOOLKIT/cli.sh env_info</set>
        </action>
              <action>
            <title>设置运行平台</title>
            <desc>如系统缺少uname或无法正确检测,请使用此选项</desc>
             <param name="type">
                <option value="arm">arm</option>
                <option value="arm64">arm64</option>
                <option value="x86">x86</option>
                 <option value="x86_64">x86_64</option>
            </param>
            <set>$TOOLKIT/cli.sh set_runarch</set>
             </action>
           </group>
           <group title="高级">
             <action>
            <title>删除Rootfs</title>
             <param name="type">
                <option value="">取消</option>
                <option value="del_rootfs">确定删除</option>
            </param>
            <set>sh $TOOLKIT/cli.sh $type</set>
        </action>
            <action>
            <title>移除运行环境</title>
             <param name="test">
                <option value="echo 已取消">取消</option>
                <option value="rm -rf $TOOLKIT/*">继续</option>
            </param>
            <set>$test</set>
        </action>
     
        <action>
            <title>设置自定义 PATH 变量</title>
            <param name="Input" label="" title="" placeholder="/bin:/usr/sbin" type="text" />
            <set>$TOOLKIT/cli.sh set_path</set>
        </action>
         <action>
            <title>开启QEMU-USER支持</title>
              <param name="qemu">
                <option value="0">关闭</option>
                <option value="x86_64">qemu-x86_64</option>
                <option value="x86">qemu-i386</option>
                <option value="arm_64">qemu-aarch64</option>
                <option value="arm">qemu-arm</option>
                <option value="armeb">qemu-armeb</option>
                <option value="mips">qemu-mips</option>
                <option value="mipsel">qemu-mipsel</option>
                <option value="mips64">qemu-mips64</option>
                <option value="riscv32">qemu-riscv32</option>
                <option value="riscv64">qemu-riscv64</option>
            </param>
            <set>
            sh $TOOLKIT/cli.sh set_emulator_qemu
            </set>
        </action>
    </group>
    <group title="PRoot设置">
    <action>
            <title>设置容器内核版本</title>
             <param name="kernel" label="" title="" placeholder="4.19" type="text" />
            <set>
            sh $TOOLKIT/cli.sh proot_fake_kernel
            </set>
        </action>
        <action>
            <title>杀死容器</title>
            <set>
            export cmd2="pkill $PACKAGE_NAME"
            $TOOLKIT/cli.sh exec_proot
            unset cmd2
            </set>
        </action>
    </group>
    
     <group title="Other">
    <action>
            <title>开源许可证</title>
              <param name="lang">
                <option value="zh_cn">简体中文</option>
                <option value="en">English</option>
                <option value="zh_tw">繁體中文</option>
            </param>
            <set>
            cat $TOOLKIT/LICENSE_$lang
            </set>
        </action>
            <action>
            <title>修改 GNU / Linux 系统密码</title>
            <param name="username" label="" title="用户名" placeholder="" type="text" />
            <param name="password" label="" title="密码" placeholder="" type="text" />
            <set>
            $TOOLKIT/cli.sh edit_passwd
            </set>
        </action>
          <action>
            <title>修复运行环境权限</title>
            <set>
            $TOOLKIT/cli.sh fix_perm
            </set>
        </action>
    </group>
    </page>