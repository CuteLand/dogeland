<?xml version="1.0" encoding="UTF-8" ?>
<items>
    <group>
        <action>
            <title>开启/关闭</title>
            <desc>管理 GNU / Linux 容器运行 </desc>
             <param name="start">
                <option value="start_auto">[自动选择]</option>
                <option value="start_chroot">[chroot]</option>
                <option value="start_proot">[proot]</option>
                <option value="start_proot_termux">[termux-proot]</option>
            </param>
            <param name="addcmd" label="附加参数" title="" placeholder="" type="text" />
            <set>sh $TOOLKIT/cli.sh $start</set>
              <action>
            <title>运行终端命令</title>
            <desc>快速运行 Linux Shell命令</desc>
            <param name="cmd2" label="命令" title="" placeholder="" type="text" />
             <param name="exec">
                <option value="exec_auto">[自动选择]</option>
                <option value="exec_chroot">[chroot]</option>
                <option value="exec_proot">[proot]</option>
                <option value="exec_proot_termux">[termux-proot]</option>
                <option value="exec_localshell">[本地Shell]</option>
            </param>
            <param name="userid" label="运行用户" title="" placeholder="root" type="text" />
            <set>sh $TOOLKIT/cli.sh $exec</set>
        </action>
    </group>
</items>


